{
   "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "paths": {
         "@/*": ["./src/*"],
         "@Assets/*": ["./src/Assets/*"],
         "@Components/*": ["./src/Components/*"],
         "@Data/*": ["./src/Data/*"],
         "@Layouts/*": ["./src/Layouts/*"],

         "@Configs/*": ["./src/Libs/Configs/*"],
         "@Handlers/*": ["./src/Libs/Handlers/*"],
         "@Hooks/*": ["./src/Libs/Hooks/*"],
         "@Schemas/*": ["./src/Libs/Schemas/*"],
         "@Themes/*": ["./src/Libs/Themes/*"],
         "@Typings/*": ["./src/Libs/Typings/*"],
         "@Utils/*": ["./src/Libs/Utils/*"],
         "@Validations/*": ["./src/Libs/Validations/*"],

         "@Pages/*": ["./src/Pages/*"],
         "@Queries/*": ["./src/Queries/*"],
         "@Services/*": ["./src/Services/*"],
         "@Styles/*": ["./src/styles/*"]
      },
      "useUnknownInCatchVariables": false
   },
   "include": ["src/**/*", "./jest.setup.ts"],
   "references": [
      {
         "path": "./tsconfig.node.json"
      }
   ]
}
