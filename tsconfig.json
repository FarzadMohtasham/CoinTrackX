{
   "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "paths": {
         "@/*": ["./src/*"],
         "@assets/*": ["./src/assets/*"],
         "@components/*": ["./src/components/*"],
         "@data/*": ["./src/data/*"],
         "@layouts/*": ["./src/layouts/*"],
         "@configs/*": ["./src/libs/configs/*"],
         "@handlers/*": ["./src/libs/handlers/*"],
         "@hooks/*": ["./src/libs/hooks/*"],
         "@schemas/*": ["./src/libs/schemas/*"],
         "@themes/*": ["./src/libs/themes/*"],
         "@typings/*": ["./src/libs/typings/*"],
         "@utils/*": ["./src/libs/utils/*"],
         "@validations/*": ["./src/libs/validations/*"],
         "@pages/*": ["./src/pages/*"],
         "@queries/*": ["./src/queries/*"],
         "@services/*": ["./src/services/*"],
         "@styles/*": ["./src/styles/*"]
      },
      "useUnknownInCatchVariables": false
   },
   "include": ["src", "./jest.setup.ts", "tailwind.config.js"],
   "references": [
      {
         "path": "./tsconfig.node.json"
      }
   ]
}
